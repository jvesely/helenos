system architecture HelenOS version 0.4.1 {
	/* SPARTAN kernel */
	inst kernel kernel;
	
	/* Naming Service */
	inst ns ns;
	
	/* RAM disk */
	inst rd rd;
	
	/* Klog */
	inst klog klog;
	
	[/uspace/lib/libc/bind%ns]
	
	[/usrpace/lib/libc/bind%rd]
	bind rd:ns to ns:ns;
	bind rd:dm_driver to devmap:dm_driver;
	
	[/usrpace/lib/libc/bind%klog]
	bind klog:ns to ns:ns;
};
